          <h2>Tipo de Equipo</h2>
          <%#= f.fields_for :tipo_equipo do |tipoequipo_form| %>
            <%#= tipoequipo_form.text_field :tipo_equipo %>
          <%# end %>
          <h2>Marca</h2>
          <%#= f.fields_for :marca do |marca_form| %>
            <%#= marca_form.text_field :marca %>
          <%# end %>
          <h2>Estado</h2>
          <%#= f.fields_for :estado do |estado_form| %>
            <%#= estado_form.text_field :estado %>
          <%# end %>
          <h2>Equipo</h2>
          <%#= f.fields_for :equipo do |equipo_form| %>
            <%#= equipo_form.text_field :serie %>
            <%#= equipo_form.text_field :modelo %>
            <%#= equipo_form.text_field :service_tag %>
            <%#= equipo_form.text_field :ip %>
            <%#= equipo_form.text_field :garantia %>
          <%# end %>
        -->
        <div class="text-center mb-2 mt-4">
          <%= f.button :submit, class: 'btn btn-primary' do %>
            <%= image_tag 'icons/save.svg'%>
            <span>Save</span>
          <%end%>
          <%= link_to home_index_path, class: 'btn btn-danger' do %>
            <%= image_tag('icons/home.svg')%>
            <span> Cancel </span>
          <%end%>
        </div> 
      </form> 
    <%end %>
  </div>
  <%= render 'partials/footer' %>
</div>

